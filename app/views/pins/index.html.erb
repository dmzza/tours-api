<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Tour</th>
      <th>Title</th>
      <th>Caption</th>
      <th>Photo</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.order %></td>
        <td><%= pin.tour_id %></td>
        <td><%= pin.title %></td>
        <td><%= pin.caption %></td>
        <td><img src="<%= pin.photo %>" width="150"></td>
        <td><img src="http://api.tiles.mapbox.com/v3/dmzza.hdj50i76/<%= tour.longitude %>,<%= tour.latitude %>,9/150x150.png"></td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

